<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_medium"
    android:foreground="@drawable/ripple_white"
    card_view:cardCornerRadius="@dimen/margin_small"
    card_view:cardElevation="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_medium_2">

        <ImageView
            android:id="@+id/iv_news_hero_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/margin_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_news_image" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_news_hero_img"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="3"
            android:text="North and South Korea Get UN's Go-Ahead to Study Joint Rail Project"
            android:textColor="@color/black_full"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_news_title"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:background="@color/grey_goose_lighter" />

        <TextView
            android:id="@+id/tv_news_source_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_news_title"
            android:layout_below="@id/view_separator"
            android:layout_toLeftOf="@+id/tv_published_date"
            android:text="The New York Times"
            android:textColor="@color/black_full"
            android:textSize="@dimen/text_regular_2x" />

        <TextView
            android:id="@+id/tv_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_separator"
            android:layout_marginRight="@dimen/margin_medium"
            android:text="2018-11-24"
            android:textSize="@dimen/text_regular" />
    </RelativeLayout>
</android.support.v7.widget.CardView>