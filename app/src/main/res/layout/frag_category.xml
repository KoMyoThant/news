<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_business_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_img_height"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_tiny"
            android:foreground="@drawable/ripple_white"
            card_view:cardCornerRadius="@dimen/margin_small"
            card_view:cardElevation="@dimen/margin_small">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_business_category_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_business_hero_img" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_black_half" />

                <TextView
                    android:id="@+id/tv_business_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Business"
                    android:textAlignment="center"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_heading_2x" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_entertainment_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_img_height"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_below="@id/cv_business_category"
            android:foreground="@drawable/ripple_white"
            card_view:cardCornerRadius="@dimen/margin_small"
            card_view:cardElevation="@dimen/margin_small">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_entertainment_category_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_entertainment_hero_img" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_black_half" />

                <TextView
                    android:id="@+id/tv_entertainment_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Entertainment"
                    android:textAlignment="center"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_heading_2x" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_sport_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_img_height"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_tiny"
            android:foreground="@drawable/ripple_white"
            android:layout_below="@id/cv_entertainment_category"
            card_view:cardCornerRadius="@dimen/margin_small"
            card_view:cardElevation="@dimen/margin_small">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_sport_category_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_sport_hero_img" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_black_half" />

                <TextView
                    android:id="@+id/tv_sport_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sport"
                    android:textAlignment="center"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_heading_2x" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_technology_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_img_height"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_tiny"
            android:foreground="@drawable/ripple_white"
            android:layout_below="@id/cv_sport_category"
            card_view:cardCornerRadius="@dimen/margin_small"
            card_view:cardElevation="@dimen/margin_small">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_technology_category_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_technology_hero_img" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_black_half" />

                <TextView
                    android:id="@+id/tv_technology_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Technology"
                    android:textAlignment="center"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_heading_2x" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_health_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_img_height"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_below="@id/cv_technology_category"
            android:foreground="@drawable/ripple_white"
            card_view:cardCornerRadius="@dimen/margin_small"
            card_view:cardElevation="@dimen/margin_small">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_health_category_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_health_hero_img" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_black_half" />

                <TextView
                    android:id="@+id/tv_health_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Health"
                    android:textAlignment="center"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_heading_2x" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_science_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_img_height"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginBottom="60dp"
            android:foreground="@drawable/ripple_white"
            android:layout_below="@id/cv_health_category"
            card_view:cardCornerRadius="@dimen/margin_small"
            card_view:cardElevation="@dimen/margin_small">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_science_category_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_science_hero_img" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_black_half" />

                <TextView
                    android:id="@+id/tv_science_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Science"
                    android:textAlignment="center"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/text_heading_2x" />
            </FrameLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>